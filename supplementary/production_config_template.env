# Production Configuration Template for Multi-Agent AI System
# Copy this file to .env and customize for your environment

# =============================================================================
# CORE API CONFIGURATION
# =============================================================================
# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_production_openai_api_key_here
OPENAI_MODEL=gpt-4

# =============================================================================
# SYSTEM PERFORMANCE CONFIGURATION
# =============================================================================
# Request handling settings
MAX_RETRIES=5
TIMEOUT_SECONDS=60
MAX_ITERATIONS=15

# Rate limiting for production
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Production logging settings
LOG_LEVEL=INFO
LOG_FILE=logs/production.log
ENABLE_FILE_LOGGING=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Input validation settings
ENABLE_INPUT_VALIDATION=true
ENABLE_OUTPUT_FILTERING=true
MAX_INPUT_LENGTH=15000

# Allowed file types for uploads
ALLOWED_FILE_TYPES=txt,md,json,pdf,docx

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# System monitoring settings
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30
METRICS_PORT=8502

# =============================================================================
# PRODUCTION DEPLOYMENT SETTINGS
# =============================================================================
# Production mode settings
DEBUG_MODE=false
ENABLE_PROFILING=false

# Database configuration (if applicable)
# DATABASE_URL=postgresql://user:password@localhost:5432/multiagent_ai
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CLOUD DEPLOYMENT CONFIGURATION
# =============================================================================
# AWS Configuration (if deploying to AWS)
# AWS_REGION=us-west-2
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Docker configuration
# DOCKER_IMAGE_TAG=latest
# CONTAINER_PORT=8501

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================
# Backup settings
# BACKUP_ENABLED=true
# BACKUP_INTERVAL=24
# BACKUP_RETENTION_DAYS=30

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Email notifications for alerts
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# ALERT_EMAIL=admin@yourcompany.com

# Slack notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Custom agent settings
# RESEARCH_AGENT_CACHE_SIZE=1000
# CONTENT_AGENT_MAX_LENGTH=5000
# VALIDATION_AGENT_STRICT_MODE=true

# Performance tuning
# WORKER_PROCESSES=4
# WORKER_THREADS=2
# CONNECTION_POOL_SIZE=20

# =============================================================================
# DEVELOPMENT OVERRIDES (Remove in production)
# =============================================================================
# Development-only settings (comment out for production)
# DEBUG_MODE=true
# LOG_LEVEL=DEBUG
# ENABLE_PROFILING=true