  "repository": {
    "type": "git",
    "url": "https://github.com/ArnabSen08/blockchain-lottery-dapp.git"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.22.19"
  },
  "dependencies": {
    "dotenv": "^16.4.7"
  }
}
